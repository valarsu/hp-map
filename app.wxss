/**app.wxss**/
@import './utils/iconfont.wxss';

page {
  background: #f8f8f8;
}
.inner-container {
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  -webkit-text-size-adjust: none;
  -webkit-user-select: none;
  font-size: 35rpx;
  color: #333;
  padding: 80rpx 0;
  font-family: Helvetica, Arial, "Helvetica Neue", "Droid";
}

button {
  background: #2a82ff;
}

.paragraph {
  text-indent: 56rpx;
}

.canvas {
  width: 100%;
  height: 200px;
}

.user-item {
  margin: 30rpx;
  margin-top: 0;
}

.navigator {
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  background: #fff;
  display: flex;
  align-items: center;
}

.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #d8d8d8;
}

.navigator:first-child:before {
  display: none;
}

.item-title {
  flex: 1;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.intro-head {
  width: 100%;
  background: tomato;
  padding: 80rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 20rpx 2rpx #999;
}

.intro-title {
  color: #fff;
  font-size: 56rpx;
  text-align: center;
  white-space: pre-wrap;
  margin-bottom: 60rpx;
}

.intro-intro {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 44rpx;
}

.intro-form {
  padding-top: 40rpx;
}

.intro-form input, .intro-form textarea, .weui-input {
  background: rgb(253, 157, 144);
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  color: #fff;
  font-size: 28rpx;
}

.intro-form textarea {
  padding: 20rpx;
  height: 400rpx;
}

.btn {
  width: 70%;
  height: 100rpx;
  background: #ff6347;
  margin: 80rpx auto;
  color: #fff;
  font-size: 48rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 8rpx;
}

.intro-tips {
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.space-between {
  display: flex;
  justify-content: space-between !important;
}   
.center-a {
  display: flex;
  justify-content: center !important;
  align-items: center !important;
}
.p-a-1 {
  padding: 16rpx !important;
}
.p-a-2 {
  padding: 32rpx !important;
}
.p-a-4 {
  padding: 96rpx !important;
}
.p-x-1 {
  padding: 0 16rpx !important;
}
.p-x-2 {
  padding: 0 32rpx !important;
}
.p-t-1 {
  padding-top: 16rpx !important;
}
.p-l-1 {
  padding-left: 16rpx !important;
}
.p-t-4 {
  padding-top: 64rpx !important;
}
.p-y-2 {
  padding: 32rpx 0 !important;
}
.m-y-2 {
  margin: 32rpx 0 !important;
}
.m-b-2 {
  margin-bottom: 32rpx!important;
}
.m-x-1 {
  margin: 0 16rpx !important;
}
.text-cut {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  display: block;
}
.clamp {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
