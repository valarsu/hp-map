/* pages/map/detail/detail.wxss */
.mask-wrapper {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  position: fixed;
  z-index: 1000;  
  top: 0;
  left: 0;
}
.mask {
  width: 88%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.mask-item {
  display: flex;
  box-sizing: border-box;
  width: 100%;
}
.mask image {
  width: 100%;
  display: block;
}
.mask .subtitle {
  font-size: 24rpx;
  color: #999;
}
.mask .primary-title {
  color: #ff5252;
}
.mask .btn-wrapper {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.mask .hidden {
  display: none !important;
}
.mask .show {
  display: flex;
}