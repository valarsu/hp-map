/* pages/calc/calc.wxss */
.tab-wrapper {
  width: 100%;
  display: flex;
  /* justify-content: space-around; */
}
.tab-item {
  line-height: 96rpx;
  background: #eee;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  position: relative;
}
.tab-wrapper .tab-choosed {
  background: #fff;
  color: #333;
}
.tab-wrapper .tab-choosed::after {
  content: '';
  display: block;
  width: 100%;
  height: 4rpx;
  background: #ff5252;
  position: absolute;
  bottom: 0;
}
.main-wrapper {
  width: 100%;
}
.main-item {
  width: 100%;
  min-height: 300px;
  display: none;
}
.cell-wrapper {
  background: #fff;
  width: 100%;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
}
.cell-item {
  width: 100%;
  box-sizing: border-box;
  line-height: 112rpx;
  height: 112rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
}
.cell-left, .cell-right {
  display: flex;
  align-items: center;
}
.cell-right input {
  width: 200rpx; 
  background: #f8f8f8;
  height: 56rpx;
  display: block; 
  color: #ff5252;
  padding: 0 16rpx;
  box-sizing: border-box;
}
.cell-item:last-child {
  border-bottom: none;
}

.main-wrapper .show {
  display: block;
}